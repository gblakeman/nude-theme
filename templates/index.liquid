{% comment %}
  The homepage is set up to list active collections, so it essentially duplicates the list-collections.liquid template.
{% endcomment %}

<header>
  <h1>Homepage</h1>
</header>

{% paginate collections by 20 %}
  <ul class="collections-list">
    {% for collection in collections %}
      {% include 'collection-item' %}
    {% endfor %}
  </ul>

  {% if paginate.pages > 1 %}
    <nav class="pagination">
      {{ paginate | default_pagination }}
    </nav>
  {% endif %}
{% endpaginate %}
